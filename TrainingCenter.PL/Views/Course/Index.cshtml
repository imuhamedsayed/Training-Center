@model IEnumerable<TrainingCenter.BLL.Models.CourseVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout.cshtml";
}

<br />
<br />
<a asp-action="Create" asp-controller="Course" class="btn btn-primary">+ Add New Course</a>

<br />
<br />

<table class="table table-striped table-hover text-center">

    <thead>
        <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Description</th>
            <th class="text-center">Duration</th>

            <th class="text-center">Operations</th>

        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Duration</td>

                <td>
                    <a asp-action="AssignInstructor" asp-controller="InstructorCourse" asp-route-id="@item.Id" class="btn btn-primary">Assign Instructor</a>
                    <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                    <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>


                </td>
            </tr>
        }

    </tbody>
</table>
