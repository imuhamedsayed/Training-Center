@model TrainingCenter.BLL.Models.InstructorVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/MainLayout.cshtml";
}

<br />
<br />
<a asp-action="Index" asp-controller="Instructor" class="btn btn-primary">Back To Instructors</a>

<br />
<br />

<form asp-action="ConfirmDelete" asp-controller="Instructor" method="post">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" disabled>

        </div>
        <div class="form-group col-md-4">
            <label for="Email">Email</label>
            <input type="text" class="form-control" asp-for="Email" disabled>

        </div>

        <div class="form-group col-md-4">
            <label for="Salary">Salary</label>
            <input type="text" class="form-control" asp-for="Salary" disabled>

        </div>

    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />

    </center>

</form>
