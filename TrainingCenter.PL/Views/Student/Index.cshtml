@model IEnumerable<TrainingCenter.BLL.Models.StudentVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout.cshtml";
}

<br />
<br />
<a asp-action="Create" asp-controller="Student" class="btn btn-primary">+ Add New Student</a>

<br />
<br />

<table class="table table-striped table-hover text-center">

    <thead>
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Phone Number</th>

            <th class="text-center">Operations</th>

        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PhoneNumber</td>

                <td>
                 
                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }

    </tbody>
</table>
