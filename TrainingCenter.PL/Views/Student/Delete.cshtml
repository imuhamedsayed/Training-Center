@model TrainingCenter.BLL.Models.StudentVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/MainLayout.cshtml";
}

<br />
<br />
<a asp-action="Index" asp-controller="Student" class="btn btn-primary">Back To Students</a>

<br />
<br />

<form asp-action="ConfirmDelete" asp-controller="Student" method="post">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" disabled>

        </div>
        <div class="form-group col-md-4">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" disabled>

        </div>

    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />

    </center>

</form>
